<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:org.vaadin.mvp.uibinder" 
	xmlns:e="urn:org.vaadin.mvp.uibinder.event" 
	xmlns:v="urn:import:com.vaadin.ui"
	xmlns:m="urn:org.vaadin.mvp.uibinder.message"
	xmlns:i="urn:org.vaadin.mvp.uibinder.method"
	v:margin="true">

	<v:Label styleName="h2" m:caption="responsibility.caption.administration" />

	<v:Table ui:field="responsibileList" width="100%" e:itemClick="editResponsible" immediate="true" selectable="true" multiSelect="false" />

	<v:HorizontalLayout spacing="true" width="100%" ui:field="buttonBar">
		<v:Label width="100%"  ui:field="expander"/>
		<v:Button m:caption="responsibile.list.add" styleName="small" e:click="addResponsibile"/>
		<v:Button m:caption="responsibile.list.remove" styleName="small" e:click="removeResponsibile"/>
	</v:HorizontalLayout>
</ui:UiBinder>