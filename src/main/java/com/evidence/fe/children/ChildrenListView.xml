<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:org.vaadin.mvp.uibinder" 
	xmlns:e="urn:org.vaadin.mvp.uibinder.event" 
	xmlns:v="urn:import:com.vaadin.ui"
	v:margin="true">

	<v:Label styleName="h2" caption="User Administration" />

	<v:Table ui:field="userList" width="100%" e:itemClick="editUser" immediate="true" selectable="true" multiSelect="false">
	</v:Table>

	<v:HorizontalLayout spacing="true">
		<v:Button caption="create" styleName="small" e:click="createUser" />
		<v:Button caption="remove" styleName="small" e:click="removeUser" />
	</v:HorizontalLayout>
</ui:UiBinder>